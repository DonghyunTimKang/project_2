<h1>Register User</h1>

<%= form_for @user do |f| %>

<% flash.each do |key, msg| %>
        <div><%= msg %></div>
<% end %>
<%= f.label :gamertag %>
    <%= f.gamertag_field :gamertag %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit  "Register" %>

<% end %>
